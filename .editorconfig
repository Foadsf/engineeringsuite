# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.
# editorconfig.org

root = true

[*]
# General settings for all files
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml}]
# Specific settings for YAML files
indent_style = space
indent_size = 2
# max_line_length = 120 # Optional: uncomment to enforce line length checks via some plugins

[*.bat]
# Specific for Windows Batch files
end_of_line = crlf

[*.{java,md,txt,ris,nuspec,ps1,xml,gitignore,gitattributes}]
# Ensure LF for most text-based files
end_of_line = lf

[*.{class,jar,zip,gz,rar,png,jpg,ico}]
# Define binary types explicitly if needed, though gitattributes is better
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
